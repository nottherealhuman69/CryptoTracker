<!-- views/cryptos.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cryptocurrency Prices</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Cryptocurrency Prices</h1>

        <!-- Back Button -->
        <!-- Back Button -->
        <div class="button-container" style="margin-top: 30px;">
    <button onclick="window.location.href='/home'">Go Back to Home</button>
    <button onclick="window.location.href='/cryptos'">Refresh Crypto Prices</button>
</div>

<table>
    <thead>
        <tr>
            <th>Coin</th>
            <th>Price (USD)</th>
            <th>Market Cap (USD)</th>
            <th>24h Change (%)</th>
        </tr>
    </thead>
    <tbody>
        <% cryptos.forEach(crypto => { %>
            <tr>
                <td><%= crypto.coin %></td>
                <td><%= crypto.price_usd.toFixed(2) %></td>
                <td><%= crypto.market_cap_usd.toLocaleString() %></td>
                <td><%= crypto.change_24h.toFixed(2) %></td>
            </tr>
        <% }) %>
    </tbody>
</table>


    </div>
</body>
</html>
